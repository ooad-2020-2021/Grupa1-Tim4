                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datiGolovi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.primljeniGolovi)
